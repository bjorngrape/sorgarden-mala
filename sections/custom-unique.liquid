<article role="table"  class='unique-container'>
  {% if section.settings.page-header != blank %}
  <h2 class='unique-header'>{{ section.settings.page-header }}</h1>
  {% endif %}
    {% for block in section.blocks %}
      <section role="row" class="unique-wrapper">
          {% if block.settings.image.src %}
          <div role="cell" class="unique-image-wrapper">
            <img loading="lazy" class="unique-image" src="{{ block.settings.image.src | img_url: '700x700' }}" alt="{{ block.settings.image.alt }}"/>	
          </div>    
          {% endif %}
          <div role="cell" class="unique-text-wrapper">
            {% if block.settings.title != blank %}
            <h2 role="columnheader" class="unique-title">{{ block.settings.title }}</h2>
            {% endif %}
            <div role="contentinfo" class="unique-text">{{ block.settings.text }}</div>
          </div>
      </section>
  {% endfor %}
</article>

<style>
  .site-footer {
  margin-top:0;}
</style>

{% schema %}
  {
    "name": "Unika smaker",
    "settings": [
      {
        "type": "text",
        "id": "page-header",
        "label": "Rubrik för sidan!"
      }	
    ],
    "blocks": [
        {
          "type": "text",
          "name": "Unik smak",
          "settings": [
              {
                  "type": "text",	
                  "id": "title",
                  "label": "Rubrik"
              },		
              {
                  "type": "richtext",
                  "id": "text",
                  "label": "Skriv text"
              },
              {
                  "type": "image_picker",
                  "id": "image",
                  "label": "Välj en bild"
              }
          ]
        }
    ] 
  }
{% endschema %}
  
{% stylesheet %}  

.unique-header {
  text-align:center;
  font-size:2em;
  margin-top:1em;
  margin-bottom:1em;
  padding-left:10%;
  padding-right:10%;
  font-style:italic;}

.unique-image {
  margin-left:auto;
  margin-right:auto;
  display:grid;}

.unique-image-wrapper {
  margin-bottom:2em;}
   
.unique-wrapper { 
  padding:2em 5%;
  max-width:2000px;
  margin:auto;}

.unique-wrapper:nth-child(odd) {
  background-color:#f8f6ed;
  flex-flow:row-reverse;}	

.unique-text-wrapper {
  display:grid;
  place-content:center;}

.unique-title {
  font-size:2.5em;
  margin-bottom:1em;}
  
.unique-text { 
  font-size:1.2em;
  line-height:1.8em;
  letter-spacing:1px;}

@media only screen and (min-width: 1000px) {
  .unique-wrapper {
    display:flex;
    justify-content:center;
    padding:2em 10%;} 

  .unique-image-wrapper {
    max-width:30%;
    margin-right:auto;
    margin-left:0;}

  .unique-wrapper:nth-child(odd) .unique-image-wrapper {
    margin-right:0;
    margin-left:auto;}

  .unique-text-wrapper {
    width:65%;} 
}
{% endstylesheet %}
  